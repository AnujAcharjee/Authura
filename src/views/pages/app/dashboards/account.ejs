<% layout("layouts/main") %>

<%
  const _avatar = user.avatar
    ? user.avatar
    : user.gender === 'MALE'
      ? '/images/avatar-m-placeholder.jpg'
      : '/images/avatar-f-placeholder.png';
%>

<div class="max-w-7xl mx-auto py-8 space-y-8">

  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-slate-900">Dashboard</h1>
      <p class="text-slate-600 mt-1">Manage your account and applications</p>
    </div>
  </div>

  <!-- Profile Section -->
  <section class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-md border border-white/60 p-6 hover:shadow-lg transition-shadow">
    <div class="flex items-start gap-6">
      <!-- Avatar -->
      <div class="relative">
        <img src="<%= _avatar %>" alt="<%= user.name %>" class="h-20 w-20 rounded-2xl object-cover ring-4 ring-orange-500/20" />
        <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-green-500 rounded-full border-4 border-white"></div>
      </div>

      <!-- User Info -->
      <div class="flex-1">
        <div class="flex items-center gap-3 mb-2">
          <h2 class="text-2xl font-bold text-slate-900"><%= user.name %></h2>
          <%- include("../../../partials/ui/badge", {
            variant: "success",
            text: "Verified",
            size: "sm"
          }) %>
        </div>

        <p class="text-slate-600 mb-3"><%= user.email %></p>

        <div class="flex items-center gap-2 text-sm text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>Joined <%= createdAtFormatted %></span>
        </div>
      </div>
    </div>
  </section>

  <!-- Security Section -->
  <section class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-md border border-white/60 p-6 hover:shadow-lg transition-shadow">
    <div class="flex items-center gap-3 mb-6">
      <div class="w-10 h-10 rounded-xl bg-linear-to-br from-orange-500 to-orange-600 flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      </div>
      <h2 class="text-xl font-bold text-slate-900">Security Settings</h2>
    </div>

    <div class="space-y-4">
      <!-- Password -->
      <div class="flex items-center justify-between p-4 rounded-xl bg-linear-to-br from-slate-50 to-white border border-slate-200 hover:border-orange-300 transition-colors">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-linear-to-br from-orange-100 to-orange-200 flex items-center justify-center">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-slate-900">Password</p>
            <p class="text-sm text-slate-600">Change your account password</p>
          </div>
        </div>
        <a href="/user/password" class="inline-flex items-center justify-center px-5 py-2.5 rounded-lg border-2 border-sky-500 text-sky-600 font-semibold hover:bg-sky-50 transition-colors">
          Reset
        </a>
      </div>

      <!-- MFA -->
      <div class="flex items-center justify-between p-4 rounded-xl bg-linear-to-br from-slate-50 to-white border border-slate-200 hover:border-orange-300 transition-colors">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-linear-to-br <%= user.mfaEnabled ? 'from-green-100 to-green-200' : 'from-sky-100 to-sky-200' %> <%= user.mfaEnabled ? '' : 'sky' %>-200 flex items-center justify-center">
            <svg class="w-6 h-6 <%= user.mfaEnabled ? 'text-green-600' : 'text-sky-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-slate-900">Two-Factor Authentication</p>
            <p class="text-sm text-slate-600">
              <% if (user.mfaEnabled) { %>
              MFA is currently enabled
              <% } else { %>
              Add extra security to your account
              <% } %>
            </p>
          </div>
        </div>
        <form method="POST" action="/account/mfa">
          <input type="hidden" name="action" value="<%= user.mfaEnabled ? 'disable' : 'enable' %>" />
          <%- include("../../../partials/form/button", {
            type: "submit",
            text: user.mfaEnabled ? 'Disable' : 'Enable',
            variant: user.mfaEnabled ? 'danger' : 'secondary',
            size: 'md'
          }) %>
        </form>
      </div>
    </div>
  </section>

  <!-- OAuth Consents Section -->
  <section class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-md border border-white/60 p-6 hover:shadow-lg transition-shadow">
    <div class="flex items-center gap-3 mb-6">
      <div class="w-10 h-10 rounded-xl bg-linear-to-br from-orange-500 to-orange-600 flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      </div>
      <h2 class="text-xl font-bold text-slate-900">OAuth Consents</h2>
    </div>

    <% if (oauthConsents.length === 0) { %>
    <div class="text-center py-12 px-4 rounded-xl border-2 border-dashed border-slate-200">
      <svg class="w-12 h-12 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <p class="text-slate-500 font-medium">No active OAuth consents</p>
      <p class="text-sm text-slate-400 mt-1">Authorized applications will appear here</p>
    </div>
    <% } else { %>
    <div class="space-y-3">
      <% for (const consent of oauthConsents) { %>
      <div class="p-5 rounded-xl bg-linear-to-br from-slate-50 to-white border border-slate-200 hover:border-orange-300 transition-colors">
        <div class="flex items-start justify-between gap-4">
          <div class="flex-1 space-y-2">
            <div class="flex items-center gap-2">
              <p class="font-semibold text-slate-900"><%= consent.client.domain %></p>
              <%- include("../../../partials/ui/badge", {
                    variant: "info",
                    text: "Active",
                    size: "sm"
                  }) %>
            </div>
            <div class="flex flex-wrap gap-2">
              <% consent.scopes.forEach(scope => { %>
              <span class="inline-flex items-center px-2.5 py-1 rounded-md bg-sky-100 text-sky-700 text-xs font-medium">
                <%= scope %>
              </span>
              <% }) %>
            </div>
            <p class="text-xs text-slate-500">
              Issued on <%= consent.date.toLocaleDateString() %>
            </p>
          </div>
          <form method="POST" action="/oauth/revoke">
            <input type="hidden" name="clientId" value="<%= consent.client.id %>" />
            <%- include("../../../partials/form/button", {
                  type: "submit",
                  text: "Revoke",
                  variant: "danger",
                  size: "sm"
                }) %>
          </form>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
  </section>

  <!-- Applications Section -->
  <section class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-md border border-white/60 p-6 hover:shadow-lg transition-shadow">
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-linear-to-br from-orange-500 to-orange-600 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-bold text-slate-900">Applications</h2>
          <p class="text-sm text-slate-600">Manage your OAuth applications</p>
        </div>
      </div>
      <a href="/client" class="inline-flex items-center justify-center px-4 py-2.5 rounded-lg bg-orange-500 text-white font-semibold hover:from-orange-600 hover:to-orange-700 transition-all shadow-sm hover:shadow-md">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Application
      </a>
    </div>

    <% if (clients.length === 0) { %>
    <div class="text-center py-16 px-4 rounded-xl border-2 border-dashed border-slate-200">
      <div class="w-16 h-16 rounded-full bg-orange-500 flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </div>
      <p class="text-slate-700 font-semibold mb-1">No applications yet</p>
      <p class="text-sm text-slate-500 mb-6">Create your first OAuth application to get started</p>
      <a href="/client" class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-orange-500 from-orange-500 to-orange-600 text-white font-semibold hover:from-orange-600 hover:to-orange-700 transition-all shadow-sm hover:shadow-md">
        Create Application
      </a>
    </div>
    <% } else { %>
    <div class="space-y-3">
      <% for (const client of clients) { %>
      <div class="group p-5 rounded-xl bg-linear-to-br from-slate-50 to-white border border-slate-200 hover:border-orange-300 hover:shadow-md transition-all">
        <div class="flex items-start justify-between gap-4">
          <div class="flex-1 space-y-3">
            <div class="flex items-center gap-3">
              <h3 class="font-bold text-slate-900 text-lg"><%= client.name %></h3>
              <%- include("../../../partials/ui/badge", {
                    variant: client.isActive ? "success" : "default",
                    text: client.isActive ? "Active" : "Inactive",
                    size: "sm"
                  }) %>
            </div>

            <div class="flex items-center gap-2">
              <span class="text-sm font-medium text-slate-600">Client ID:</span>
              <div class="flex items-center gap-2 flex-1 min-w-0">
                <code class="text-xs font-mono text-slate-700 bg-slate-100 px-3 py-1.5 rounded-lg flex-1 truncate">
                  <%= client.id %>
                </code>
                <button onclick="copyToClipboard('<%= client.id %>', this)" class="p-2 hover:bg-slate-200 rounded-lg transition-colors group/btn" title="Copy Client ID">
                  <svg class="w-4 h-4 text-slate-600 group-hover/btn:text-slate-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <a href="/client/<%= client.id %>" class="inline-flex items-center gap-1 px-4 py-2 rounded-lg bg-white border border-slate-300 text-slate-700 font-medium hover:border-sky-500 hover:text-sky-600 transition-colors opacity-0 group-hover:opacity-100">
            View Details
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
  </section>

  <!-- Danger Zone -->
  <section class="bg-linear-to-br from-red-50 to-red-100/50 rounded-2xl shadow-md border border-red-200 p-6">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-10 h-10 rounded-xl bg-linear-to-br from-red-500 to-red-600 flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div>
        <h2 class="text-xl font-bold text-red-900">Danger Zone</h2>
        <p class="text-sm text-red-700">Irreversible actions</p>
      </div>
    </div>

    <div class="space-y-3">
      <form method="POST" action="/api/auth/signout">
        <button type="submit" class="text-sm text-red-700 hover:text-red-900 font-medium hover:underline">
          Sign out from all devices
        </button>
      </form>
      <!-- <a href="/account/deactivate" aria-disabled="true"  class="block text-sm text-red-700 hover:text-red-900 font-medium hover:underline cursor-not-allowed">
        Deactivate account
      </a>
      <a href="/account/delete" aria-disabled="true" class="block text-sm text-red-700 hover:text-red-900 font-medium hover:underline cursor-not-allowed">
        Delete account
      </a> -->

      <span aria-disabled="true" class="block text-sm font-medium
      text-red-500
        opacity-60
        cursor-not-allowed
        select-none">
        Deactivate account (Coming soon)
      </span>
      <span aria-disabled="true" class="block text-sm font-medium
      text-red-500
        opacity-60
        cursor-not-allowed
        select-none">
        Delete account (Coming soon)
      </span>

    </div>
  </section>

</div>