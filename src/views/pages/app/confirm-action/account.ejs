<% layout("layouts/main") %>

<div class="max-w-3xl mx-auto py-12 space-y-8">

  <!-- Back -->
  <a href="/account" class="inline-flex items-center text-sm font-medium text-slate-600 hover:text-orange-600">
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Account
  </a>

  <section class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-red-200 p-8">

    <div class="flex items-center gap-4 mb-6">
      <div class="w-12 h-12 rounded-xl bg-linear-to-br from-red-500 to-red-600 flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>

      <div>
        <h1 class="text-2xl font-bold text-red-900">
          <%= action === 'delete' ? 'Delete Account' : action === 'activate' ? 'Activate Account' : 'Deactivate Account' %>
        </h1>
        <p class="text-sm text-red-700">
          This action requires confirmation
        </p>
      </div>
    </div>

    <div class="rounded-xl border-l-4 border-red-500 bg-red-50 p-4 mb-6">
      <% if (action === 'delete') { %>
      <p class="text-sm text-red-800">
        Deleting your account is <strong>permanent</strong>. All data will be removed and cannot be recovered.
      </p>
      <% } else if (action === 'activate') { %>
      <p class="text-sm text-red-800">
        Activating your account will restore access to your dashboard and applications.
      </p>
      <% } else { %>
      <p class="text-sm text-red-800">
        Deactivating your account will disable access immediately. You can reactivate by signing in again.
      </p>
      <% } %>
    </div>

    <div class="flex justify-end gap-4">
      <a href="/account" class="px-4 py-2 text-sm font-semibold rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-50">
        Cancel
      </a>

      <% if (action === 'delete') { %>
      <form method="POST" action="/api/user?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
      <% } else if (action === 'activate') { %>
      <form method="POST" action="/api/user/activate">
      <% } else { %>
      <form method="POST" action="/api/user/deactivate">
      <% } %>

          <button type="submit" class="px-6 py-2.5 rounded-lg text-sm font-semibold text-white
                       bg-linear-to-r from-red-500 to-red-600
                       hover:from-red-600 hover:to-red-700
                       focus:outline-none focus:ring-4 focus:ring-red-500/30">
          <%= action === 'delete'
              ? 'Yes, Delete My Account'
              : action === 'activate'
                ? 'Yes, Activate My Account'
                : 'Yes, Deactivate My Account'
          %>
        </button>
      </form>
    </div>

  </section>

</div>
