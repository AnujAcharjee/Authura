<% layout("layouts/main") %>

<%
  const confirmText =
    action === 'delete'
      ? 'Yes, Delete Application'
      : 'Yes, Deactivate Application';
%>

<div class="max-w-3xl mx-auto py-12 space-y-8">

  <!-- Back -->
  <a href="/client/<%= clientId %>" class="inline-flex items-center text-sm font-medium text-slate-600 hover:text-orange-600 transition-colors">
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Client Dashboard
  </a>

  <!-- Confirmation Card -->
  <section class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-red-200 p-8">

    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
      <div class="w-12 h-12 rounded-xl bg-linear-to-br from-red-500 to-red-600 flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>

      <div>
        <h1 class="text-2xl font-bold text-red-900">
          <%= action === 'delete' ? 'Delete Application' : 'Deactivate Application' %>
        </h1>
        <p class="text-sm text-red-700">
          This action requires explicit confirmation
        </p>
      </div>
    </div>

    <!-- Warning -->
    <div class="rounded-xl border-l-4 border-red-500 bg-linear-to-r from-red-50 to-red-50/50 p-4 mb-6">
      <p class="text-sm text-red-900 font-semibold mb-1">
        Are you absolutely sure?
      </p>

      <% if (action === 'delete') { %>
      <p class="text-sm text-red-800">
        Deleting this application is <strong>permanent</strong>.
        All client credentials, redirect URIs, and secrets will be removed and cannot be recovered.
      </p>
      <% } else { %>
      <p class="text-sm text-red-800">
        Deactivating this application will immediately block OAuth authorization and token requests.
        You can re-enable it later.
      </p>
      <% } %>
    </div>

    <!-- App Info -->
    <div class="rounded-xl bg-slate-50 border border-slate-200 p-4 mb-6">
      <p class="text-sm text-slate-600 mb-1">Application</p>
      <p class="font-semibold text-slate-900"><%= name %></p>
      <p class="text-xs font-mono text-slate-500"><%= clientId %></p>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end gap-4">

      <!-- Cancel -->
      <a href="/client/<%= clientId %>" class="px-4 py-2 text-sm font-semibold rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-50">
        Cancel
      </a>

      <!-- Confirm -->
      <form method="POST" action="/api/client/<%= clientId %>?_method=<%= action === 'delete' ? 'DELETE' : 'PUT' %>">
        <%- include("../../../partials/form/button", {
          type: "submit",
          text: confirmText,
          variant: "danger",
          fullWidth: true,
          size: "lg"
        }) %>
      </form>
    </div>

  </section>

</div>