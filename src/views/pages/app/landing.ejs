<% layout("layouts/landing") %>

<div class="min-h-screen flex flex-col">
  
  <!-- Header -->
  <header class="relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2 text-xl font-bold text-slate-900">
          <%- include("../../partials/icons/logo") %>
          <span>Authura</span>
        </a>

        <!-- Sign up link -->
        <a href="/signup" class="text-sm font-medium px-4 py-2 rounded-lg text-slate-600 hover:bg-white/60 hover:text-orange-600 transition-all">
          Sign up
        </a>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <main class="flex-1 relative">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-32 text-center">
      
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/60 backdrop-blur-sm border border-orange-200/60 shadow-sm mb-8">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-orange-500"></span>
        </span>
        <span class="text-sm font-medium text-orange-900">OAuth 2.0 & OpenID Connect</span>
      </div>

      <!-- Title -->
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-slate-900 tracking-tight mb-6">
        Secure Authentication
        <span class="block text-transparent bg-clip-text bg-linear-to-r from-orange-600 to-orange-500 mt-2">
          Made Simple
        </span>
      </h1>

      <!-- Description -->
      <p class="mt-6 text-lg sm:text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Authura is a secure, standards-compliant identity provider designed for modern backend systems. 
        Centralize authentication, authorization, and OAuth flows with enterprise-grade security.
      </p>

      <!-- Features -->
      <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-6 max-w-4xl mx-auto text-left">
        <div class="p-6 rounded-2xl bg-white/60 backdrop-blur-sm border border-white/60 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-linear-to-br from-sky-500 to-sky-600 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="font-semibold text-slate-900 mb-2">Security First</h3>
          <p class="text-sm text-slate-600">Built with industry-standard protocols and best security practices</p>
        </div>

        <div class="p-6 rounded-2xl bg-white/60 backdrop-blur-sm border border-white/60 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-linear-to-br from-orange-500 to-orange-600 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-semibold text-slate-900 mb-2">Lightning Fast</h3>
          <p class="text-sm text-slate-600">Optimized for performance with minimal latency</p>
        </div>

        <div class="p-6 rounded-2xl bg-white/60 backdrop-blur-sm border border-white/60 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-linear-to-br from-red-500 to-red-600 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <h3 class="font-semibold text-slate-900 mb-2">Developer Friendly</h3>
          <p class="text-sm text-slate-600">Simple APIs and comprehensive documentation</p>
        </div>
      </div>

    </div>
  </main>

  <!-- CTA Section -->
  <section class="relative border-t border-slate-200">
    <div class="absolute inset-0 bg-linear-to-br from-white via-orange-50/20 to-sky-50/30"></div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
      <h2 class="text-4xl font-bold text-slate-900 mb-4">
        Ready to get started?
      </h2>
      <p class="text-lg text-slate-600 mb-8 max-w-2xl mx-auto">
        Sign in to access your dashboard and start managing authentication flows for your applications.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/signin" class="inline-flex items-center justify-center px-8 py-4 rounded-xl bg-linear-to-r from-sky-500 to-sky-600 text-white text-base font-semibold hover:from-sky-600 hover:to-sky-700 transition-all shadow-lg shadow-sky-500/30 hover:shadow-xl hover:shadow-sky-500/40">
          Sign in to Dashboard
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        
        <a href="/signup" class="inline-flex items-center justify-center px-8 py-4 rounded-xl bg-white border-2 border-orange-500 text-orange-600 text-base font-semibold hover:bg-orange-50 transition-all">
          Create Account
        </a>
      </div>

      <!-- Trust badges -->
      <div class="mt-12 flex items-center justify-center gap-8 text-sm text-slate-500">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>OAuth 2.0 Compliant</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>OIDC Support</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>Enterprise Ready</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="border-t border-slate-200 bg-white/60 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <p class="text-center text-sm text-slate-500">
        Â© 2026 Authura. All rights reserved.
      </p>
    </div>
  </footer>

</div>
