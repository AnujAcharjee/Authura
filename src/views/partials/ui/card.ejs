<%
  const _variant = typeof variant !== 'undefined' ? variant : 'default'; // default | gradient | glass
  const _padding = typeof padding !== 'undefined' ? padding : 'p-6';
  const _className = typeof className !== 'undefined' ? className : '';

  const variantClasses = {
    default: 'bg-white border border-slate-200 shadow-sm',
    gradient: 'bg-gradient-to-br from-white to-slate-50/50 border border-slate-200 shadow-md',
    glass: 'bg-white/70 backdrop-blur-sm border border-white/60 shadow-lg'
  };
%>

<div class="rounded-2xl <%= variantClasses[_variant] %> <%= _padding %> <%= _className %> transition-all duration-200 hover:shadow-lg">
  <%- content %>
</div>
