<svg width="200" height="200" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background Glow -->
  <circle cx="100" cy="100" r="90" fill="url(#glowGradient)" opacity="0.15" />

  <!-- Main Icon (Same as horizontal logo, scaled up) -->
  <g transform="translate(100, 100) scale(2.8)">
    <!-- Shield -->
    <path d="M0 -35 L30 -25 L30 0 C30 15 20 27 0 35 C-20 27 -30 15 -30 0 L-30 -25 Z" fill="url(#logoShieldGradient)" stroke="url(#logoBorderGradient)" stroke-width="1.5" />

    <!-- Lock -->
    <g transform="translate(0, 3)">
      <rect x="-8" y="-3" width="16" height="14" rx="2" fill="url(#logoLockGradient)" />
      <path d="M-5 -3 L-5 -8 C-5 -10.76 -2.76 -13 0 -13 C2.76 -13 5 -10.76 5 -8 L5 -3" stroke="#FFF" stroke-width="2" stroke-linecap="round" fill="none" />
      <circle cx="0" cy="2" r="1.5" fill="#EA580C" />
      <rect x="-0.7" y="2" width="1.4" height="4" rx="0.7" fill="#EA580C" />
    </g>

    <!-- Flow Arrows -->
    <circle cx="-18" cy="-5" r="2.5" fill="#0EA5E9" opacity="0.7" />
    <circle cx="18" cy="-5" r="2.5" fill="#0EA5E9" opacity="0.7" />
    <path d="M-15.5 -5 L-10 0" stroke="#0EA5E9" stroke-width="1.5" opacity="0.7" marker-end="url(#smallArrow)" />
    <path d="M15.5 -5 L10 0" stroke="#0EA5E9" stroke-width="1.5" opacity="0.7" marker-end="url(#smallArrow)" />
  </g>

  <!-- Gradients -->
  <defs>
    <!-- Glow Background -->
    <radialGradient id="glowGradient">
      <stop offset="0%" stop-color="#F97316" />
      <stop offset="100%" stop-color="#EA580C" />
    </radialGradient>

    <!-- Shield Gradient -->
    <linearGradient id="logoShieldGradient" x1="0" y1="-35" x2="0" y2="35" gradientUnits="userSpaceOnUse">
      <stop offset="0%" stop-color="#F97316" />
      <stop offset="100%" stop-color="#EA580C" />
    </linearGradient>

    <!-- Border Gradient -->
    <linearGradient id="logoBorderGradient" x1="0" y1="-35" x2="0" y2="35" gradientUnits="userSpaceOnUse">
      <stop offset="0%" stop-color="#FB923C" />
      <stop offset="100%" stop-color="#C2410C" />
    </linearGradient>

    <!-- Lock Body Gradient -->
    <linearGradient id="logoLockGradient" x1="0" y1="-3" x2="0" y2="11" gradientUnits="userSpaceOnUse">
      <stop offset="0%" stop-color="#FFF" />
      <stop offset="100%" stop-color="#FED7AA" />
    </linearGradient>

    <!-- Arrow Marker -->
    <marker id="smallArrow" markerWidth="8" markerHeight="8" refX="7" refY="2.5" orient="auto" markerUnits="strokeWidth">
      <path d="M0,0 L0,5 L7,2.5 z" fill="#0EA5E9" />
    </marker>
  </defs>
</svg>