{
  "name": "authura-idp",
  "version": "1.0.0",
  "private": true,
  "description": "An Identity provider",
  "author": "Anuj Acharjee",
  "license": "ISC",
  "main": "index.ts",
  "type": "module",
  "keywords": [
    "Authura"
  ],
  "scripts": {
    "build": "npx tsc --build",
    "start": "node dist/index.js",
    "dev": "npx nodemon",
    "dev:clean": "rimraf dist && tsx watch src/index.ts",
    "seed:dev": "tsx --tsconfig tsconfig.scripts.json scripts/dev.seed.ts",
    "seed:prod": "tsx --tsconfig tsconfig.scripts.json scripts/prod.seed.ts",
    "docker:dev:build": "docker compose --project-name authura-idp -f docker-compose.dev.yml build --no-cache",
    "docker:dev:up": "docker compose --project-name authura-idp -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose --project-name authura-idp -f docker-compose.dev.yml down -v",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "prisma:migrate:prod": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "ejs-mate": "^4.0.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.3",
    "module-alias": "^2.2.3",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.2.1"
  }
}
