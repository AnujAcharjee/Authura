{
  "name": "authura-idp",
  "version": "1.0.0",
  "private": true,
  "description": "An Identity provider",
  "author": "Anuj Acharjee",
  "license": "ISC",
  "main": "index.ts",
  "type": "module",
  "keywords": [
    "Authura"
  ],
  "scripts": {
    "build": "npx tsc --build",
    "start": "node dist/index.js",
    "dev": "npx nodemon",
    "seed:dev": "tsx --tsconfig tsconfig.scripts.json scripts/dev.seed.ts",
    "seed:prod": "tsx --tsconfig tsconfig.scripts.json scripts/prod.seed.ts",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down -v"
  },
  "_moduleAliases": {
    "@": "dist/src"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.2.1"
  }
}
