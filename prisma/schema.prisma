generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  name     String  @db.VarChar(99)
  email    String  @unique @db.VarChar(99)
  password String? @db.VarChar(100)

  role UserRole @default(USER)

  avatar String?

  emailVerifiedAt DateTime?

  // Security
  mfaEnabled       Boolean   @default(false) //multi factor authentication(mfa)
  mfaSecret        String?
  failedLoginCount Int       @default(0)
  lockedUntil      DateTime?

  // Activity
  lastLoginAt DateTime?
  lastLoginIp String?

  // Lifecycle
  isActive Boolean @default(true)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  credential           Credential[]
  sessions           Session[]
  verificationTokens VerificationToken[]
}

enum UserRole {
  ADMIN
  USER
}

model Credential {
  id        String   @id @default(uuid())
  userId    String

  type      CredentialType
  provider  String?   // google, github (null for password)
  subject   String?   // OAuth sub
  secret    String?   // password hash

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, subject])
}

enum CredentialType {
  PASSWORD
  OAUTH
}

model Session {
  id        String  @id @default(uuid())
  token     String  @unique
  ip        String?
  userAgent String?

  expiresAt DateTime
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model VerificationToken {
  id        String    @id @default(uuid())
  type      TokenType
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
}

enum TokenType {
  EMAIL_VERIFY
  PASSWORD_RESET
}
