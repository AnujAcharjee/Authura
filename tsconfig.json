{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@templates/*": ["src/templates/*"]
    },

    "typeRoots": ["src/@types", "node_modules/@types"],
    "types": ["node"],

    "resolveJsonModule": true,
    "sourceMap": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
