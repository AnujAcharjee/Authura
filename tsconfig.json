{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "./",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "typeRoots": ["src/@types", "node_modules/@types"],
    "types": ["node"],

    "resolveJsonModule": true,
    "sourceMap": true
  },

  "include": ["src", "generated"],
  "exclude": ["node_modules", "dist"]
}
